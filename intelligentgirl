#include <bits/stdc++.h>
using namespace std;
#define ll  long long
#define M 1000000007;
int main() {
        string s;cin>>s;
        vector<ll> a(s.size()+1,0);
        for(int i=s.size();i>0;i--)
        {
            if(((s[i-1]-'0')%2==0)&&(s[i-1]!='0'))
            {
                a[i]=1;
            }
        }
        for(int i=s.size();i>0;i--)
        {
            a[i-1]+=a[i];
        }
        for(int i=1;i<s.size()+1;i++)
        {
            cout<<a[i]<<" ";
        }
        cout<<endl;
    return 0;
}

